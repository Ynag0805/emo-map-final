{
  "expo": {
    "name": "音樂探索地圖",
    "slug": "music-discovery-map",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "musicmap",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      "expo-location",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "此應用程式需要存取位置來顯示附近的音樂膠囊。"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}